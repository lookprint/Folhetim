 <%= form_for(@admin_mural, html: {:class=>'form-horizontal validate', multipart: true }) do |f| %>

              <!-- 0= rascunho ,  1=publicado -->
             <%=  hidden_field(:admin_mural, :status, :value =>0)%>

              <div class="widget">
                <div class="widget-head">
                  <div class="pull-left">Escrever</div>
                  <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                    <a href="#" class="wsettings"><i class="fa fa-wrench"></i></a>  
                    <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                  </div>  
                  <div class="clearfix"></div>
                </div>
                <div class="widget-content">
                  <div class="padd">
                    <%= f.text_field :title, class: 'validate[required] form-control col-lg-8', placeholder: 'Escreva o título' %>
                    <div class="clearfix"></div>
                  
                    <div class="text-area">
                        <%= f.text_area :text, class:'asdasdasd validate[required]' %>
                    </div>

                  </div>
                  <div class="widget-foot">
                    Tudo bem por aqui.
                  </div>
                </div>
              </div>  

              <div class="widget">
                <div class="widget-head">
                  <div class="pull-left">Outros detalhes</div>
                  <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                    <a href="#" class="wsettings"><i class="fa fa-wrench"></i></a>  
                    <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                  </div>  
                  <div class="clearfix"></div>
                </div>
                <div class="widget-content">
                  <div class="padd">

                    <h6>PŔEVIA</h6>
                    <p>Fale um pouco da oferta</p>
                    <div class="text-area">
                         <%= f.text_area :subject, class:'form-control col-lg-12 validate[required]' %>

                    </div>

                    <hr />

                    <h6>DEPARTAMENTO</h6>
                    <%#= rails g migration add_department_to_murals department:references %>
                        <%= f.collection_select(:admin_department_id, Admin::Department.all, :id, :name, {}, {:class=>'form-control validate[required]'})%>
                    

                  </div>
                </div>
              </div>  
              
            </div>

          

            <div class="col-md-4">

              <div class="widget">
                <div class="widget-head">
                  <div class="pull-left">Detalhes</div>
                  <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                    <a href="#" class="wsettings"><i class="fa fa-wrench"></i></a>  
                    <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                  </div>  
                  <div class="clearfix"></div>
                </div>
                <div class="widget-content">
                  <div class="padd">

            
                      <h6>Categorias</h6>
                      <hr />
                      <div class="check-box">
              <label><%=radio_button("admin_mural", "category", "1")%> Aluno</label>
            </div>
            <div class="check-box">
              <label><%=radio_button("admin_mural", "category", "2")%> Professor</label>
            </div>
            <div class="check-box">
              <label><%=radio_button("admin_mural", "category", "3")%> Outros</label>
            </div>

                      <hr />
                      <h6>Tags</h6>
                      <hr />
                       <%= f.text_field :tag, class: 'validate[required] form-control col-lg-12', placeholder: 'Tags' %>

                      <hr />
          <div class="buttons">
                      <button class="btn btn-primary" onclick="$('#admin_mural_status').val(0);">Salvar Rascunho</button> 
                      <button class="btn btn-default" onclick="$('#admin_mural_status').val(1);">Publicar</button>
                      <button type="reset" class="btn btn-danger">Desfazer</button>
          </div>
                  </div>
                </div>
              </div>  

            </div>


            <div class="col-md-4">
                <div class="widget">
                  <div class="widget-head">
                    <div class="pull-left">Selecione o edital</div>
                    <div class="widget-icons pull-right">
                      <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                      <a href="#" class="wsettings"><i class="fa fa-wrench"></i></a>  
                      <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                    </div>
                    <div class="clearfix"></div>
                  </div>
                  <div class="widget-content">
                    <div class="padd">
                     <%= f.file_field :edital %>
                    </div>
                  </div>    
                </div>   
            </div>
          </div>



    <% end %>